<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox fx:controller="com.geekbrains.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <HBox fx:id="loginPanel"><TextField fx:id="userField" HBox.hgrow="ALWAYS" onAction="#login" promptText="Введите ник..."/>
        <Button text="Войти" onAction="#login"/>
    </HBox>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox fx:id="msgPanel" visible="false"><TextField fx:id="textField" HBox.hgrow="ALWAYS" onAction="#sendMsg" promptText="Введите сообщение"/>
        <Button text="Отправить" onAction="#sendMsg"/>
    </HBox>
</VBox>