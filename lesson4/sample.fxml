<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">
    <TextArea fx:id="messageHistory" editable="false" VBox.vgrow="ALWAYS" />
    <TextField fx:id="messagePrint" VBox.vgrow="ALWAYS" > </TextField>
    <Button fx:id="sendMessage" onAction="#sending" text="Отправить" > </Button>
</VBox>
